{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nuevo Galeno",
  "version": "0.0.12",
  "identifier": "dev.alexitoo.nuevogaleno",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Nuevo Galeno",
        "width": 1920,
        "height": 1080,
        "fullscreen": true,
        "decorations": false,
        "center": true,
        "resizable": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/plugins/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "installMode": "quiet",
      "endpoints": [
        "https://github.com/yanquisalexander/NuevoGaleno/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVDMzhBRkMwQkIzRThDOUYKUldTZmpENjd3Szg0WERMUVE3KzhyUzk5ZTNkRlY0SGlHNDkrYjBSZ2J6cWRBS1Q5QmVLWUpONzUK"
    }
  }
}